# Server Configuration
NODE_ENV=development
PORT=5000

# Security Settings (intentionally vulnerable for learning)
CSRF_PROTECTION=false
XSS_PROTECTION=false
SQL_INJECTION_PROTECTION=false
COOKIE_SECURE=false
